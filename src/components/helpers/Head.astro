---
import { constructURL } from 'google-fonts-helper'
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer'
import site from '@data/site.mjs'
import { SEO } from 'astro-seo'

const pageSeo = Astro.props.seo
const defaultSeo = {
  charset: 'UTF-8',
  titleDefault: site.name,
  openGraph: {
    basic: {
      title: site.name,
      type: 'website',
      image: Astro.url.pathname + site.image,
    },
  },
}
const mergedSeo = {
  ...defaultSeo,
  ...pageSeo,
}

// Google fonts
// const googleFonts = siteConfig.googleFonts
// const googleFontsURL = constructURL({
//   families: googleFonts,
// })

// Google Analytics
// const googleAnalyticsId = siteConfig.googleAnalyticsId
---

<meta
  content="width=device-width, initial-scale=1, viewport-fit=cover"
  name="viewport"
/>
<meta
  name="generator"
  content={Astro.generator}
/>

<!-- SEO tags -->
<SEO {...mergedSeo} />

<link
  rel="preconnect"
  href="https://fonts.googleapis.com"
/>
<link
  rel="preconnect"
  href="https://fonts.gstatic.com"
  crossorigin
/>
<link
  href="https://fonts.googleapis.com/css2?family=Marcellus&family=Mulish:ital,wght@0,200;0,300;0,400;1,200;1,300&display=swap"
  rel="stylesheet"
/>

