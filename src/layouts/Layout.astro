---
import siteConfig from '@data/config.mjs'
import Head from '@components/Head.astro'
import TheHeader from '@components/TheHeader.svelte'
import TheFooter from '@components/TheFooter.svelte'

const { seo } = Astro.props
---

<!DOCTYPE html>
<html
  lang={siteConfig.lang}
  class="h-full w-full overflow-x-hidden scroll-smooth"
>
  <head>
    <Head {seo} />
    </head>
  <body
    class="relative h-full w-full overflow-x-hidden scroll-smooth"
  >
    <TheHeader />
    <slot />
    <TheFooter />
  </body>
</html>
